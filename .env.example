# =================================
# CONTENT CREATION ECOSYSTEM - API CONFIGURATION TEMPLATE
# =================================
# Copy this file to .env and fill in your actual API keys
# Never commit .env to version control - add it to .gitignore

# =================================
# AI & CONTENT GENERATION (REQUIRED)
# =================================
# Claude API - Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenRouter for alternative LLMs - Get from: https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# FAL.AI for image/video generation - Get from: https://fal.ai/
FAL_AI_API_KEY=your_fal_ai_api_key_here

# =================================
# SOCIAL MEDIA PLATFORMS (REQUIRED FOR POSTING)
# =================================
# X (Twitter) API v2 - Get from: http://docs.x.com/x-api/introduction
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# LinkedIn API - Get from: https://www.linkedin.com/developers/
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token_here
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# =================================
# EMAIL MARKETING (CHOOSE ONE)
# =================================
# Mailchimp - Get from: https://mailchimp.com/developer/
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
MAILCHIMP_SERVER_PREFIX=us1

# SendGrid (alternative) - Get from: https://sendgrid.com/
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Klaviyo (alternative) - Get from: https://www.klaviyo.com/developers
KLAVIYO_API_KEY=your_klaviyo_api_key_here

# Direct SMTP (fallback)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_USE_TLS=true

# =================================
# RESEARCH & SEO TOOLS (RECOMMENDED)
# =================================
# Google Search API - Get from: https://console.cloud.google.com/
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_CSE_ID=your_google_custom_search_engine_id_here

# SEO Tools (choose one)
SEMRUSH_API_KEY=your_semrush_api_key_here
AHREFS_API_KEY=your_ahrefs_api_key_here
SERP_API_KEY=your_serp_api_key_here

# =================================
# OPTIONAL INTEGRATIONS
# =================================
# Cloud Storage
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET=your_bucket_name_here
AWS_REGION=us-east-1

# Analytics
GOOGLE_ANALYTICS_API_KEY=your_ga_api_key_here

# Notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# =================================
# SYSTEM CONFIGURATION
# =================================
NODE_ENV=development
DEBUG_MODE=true
LOG_LEVEL=info
RATE_LIMIT_REQUESTS_PER_MINUTE=60
ENCRYPTION_KEY=your_32_character_encryption_key_here

# =================================
# FUTURE PLATFORM APIS
# =================================
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token_here
YOUTUBE_API_KEY=your_youtube_api_key_here
PINTEREST_ACCESS_TOKEN=your_pinterest_access_token_here
MEDIUM_ACCESS_TOKEN=your_medium_access_token_here